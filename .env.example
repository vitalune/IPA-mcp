# Personal Knowledge Assistant MCP Server Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_NAME=personal-knowledge-assistant
MCP_SERVER_VERSION=0.1.0
MCP_LOG_LEVEL=INFO
MCP_TRANSPORT=stdio

# =============================================================================
# Email Configuration (handled by api-integration-specialist)
# =============================================================================
# Gmail API
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Outlook/Exchange
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_TENANT_ID=your_outlook_tenant_id_here

# SMTP Configuration (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# =============================================================================
# Social Media API Configuration (handled by api-integration-specialist)
# =============================================================================
# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# Facebook/Meta API
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Instagram API (via Facebook)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# =============================================================================
# Database Configuration (handled by security-privacy-guardian)
# =============================================================================
DATABASE_URL=sqlite:///./personal_knowledge.db
DATABASE_ENCRYPT=true
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# =============================================================================
# Security and Privacy Configuration (handled by security-privacy-guardian)
# =============================================================================

# Core Application Settings
APP_ENVIRONMENT=development  # development, staging, production
APP_DEBUG=false

# Master Encryption Configuration
ENCRYPTION__MASTER_KEY=your_32_byte_base64_encoded_master_key_here
ENCRYPTION__KEY_SALT=your_16_byte_base64_encoded_salt_here
ENCRYPTION__PBKDF2_ITERATIONS=100000
ENCRYPTION__ARGON2_TIME_COST=2
ENCRYPTION__ARGON2_MEMORY_COST=65536
ENCRYPTION__ARGON2_PARALLELISM=1
ENCRYPTION__TOKEN_EXPIRY_HOURS=24
ENCRYPTION__REFRESH_TOKEN_EXPIRY_DAYS=30

# Security Settings
SECURITY__REQUIRE_MFA=false
SECURITY__SESSION_TIMEOUT_MINUTES=60
SECURITY__MAX_LOGIN_ATTEMPTS=5
SECURITY__LOCKOUT_DURATION_MINUTES=15
SECURITY__API_RATE_LIMIT_PER_MINUTE=60
SECURITY__CACHE_RATE_LIMIT_PER_HOUR=500
SECURITY__ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SECURITY__TRUSTED_PROXIES=
SECURITY__MAX_FILE_SIZE_MB=10
SECURITY__ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx,.json,.yaml,.yml

# Privacy and Data Protection Settings
PRIVACY__COLLECT_ANALYTICS=false
PRIVACY__ANONYMIZE_LOGS=true
PRIVACY__CACHE_RETENTION_DAYS=7
PRIVACY__LOG_RETENTION_DAYS=90
PRIVACY__AUDIT_RETENTION_YEARS=2
PRIVACY__REQUIRE_EXPLICIT_CONSENT=true
PRIVACY__ENABLE_DATA_EXPORT=true
PRIVACY__ENABLE_DATA_DELETION=true
PRIVACY__ALLOWED_COUNTRIES=
PRIVACY__BLOCKED_COUNTRIES=
PRIVACY__PROCESSING_PURPOSES=personal_knowledge_management,data_analysis,search_optimization

# Database and Storage Settings
DATABASE__DATA_DIRECTORY=~/.ipa_mcp
DATABASE__CACHE_DIRECTORY=~/.ipa_mcp/cache
DATABASE__LOGS_DIRECTORY=~/.ipa_mcp/logs
DATABASE__ENCRYPT_DATABASE=true
DATABASE__DATABASE_BACKUP_ENABLED=true
DATABASE__BACKUP_RETENTION_COUNT=5
DATABASE__MAX_CACHE_SIZE_MB=100
DATABASE__CACHE_COMPRESSION_ENABLED=true

# API Credential Management Settings
API_CREDENTIALS__OAUTH_REDIRECT_URI=http://localhost:8080/oauth/callback
API_CREDENTIALS__OAUTH_STATE_EXPIRY_MINUTES=10
API_CREDENTIALS__GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly
API_CREDENTIALS__DRIVE_SCOPES=https://www.googleapis.com/auth/drive.readonly
API_CREDENTIALS__ENCRYPT_STORED_TOKENS=true
API_CREDENTIALS__TOKEN_ROTATION_ENABLED=true

# Audit and Monitoring Settings
AUDIT__AUDIT_ENABLED=true
AUDIT__AUDIT_FILE_ROTATION=true
AUDIT__AUDIT_MAX_FILE_SIZE_MB=50
AUDIT__TRACK_API_CALLS=true
AUDIT__TRACK_DATA_ACCESS=true
AUDIT__TRACK_CONFIGURATION_CHANGES=true
AUDIT__SECURITY_ALERTS_ENABLED=true
AUDIT__FAILED_LOGIN_ALERT_THRESHOLD=3
AUDIT__AUDIT_LOG_SIGNING=true
AUDIT__LOG_INTEGRITY_CHECK_INTERVAL_HOURS=24

# Legacy JWT Settings (for backwards compatibility)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Legacy Settings (for backwards compatibility)
DATA_RETENTION_DAYS=365
ANONYMIZE_DATA=true
GDPR_COMPLIANCE=true

# =============================================================================
# Data Storage and Processing (handled by data-insights-analyst)
# =============================================================================
DATA_DIRECTORY=./data
CACHE_DIRECTORY=./cache
TEMP_DIRECTORY=./temp
MAX_FILE_SIZE_MB=100

# Analytics and Insights
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PATTERN_DETECTION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ANALYSIS_BATCH_SIZE=1000

# =============================================================================
# External Services and Integrations
# =============================================================================
# Calendar Integration
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret_here

OUTLOOK_CALENDAR_ENABLED=false
OUTLOOK_CALENDAR_CLIENT_ID=your_outlook_calendar_client_id_here

# File Storage
LOCAL_STORAGE_PATH=./storage
CLOUD_STORAGE_PROVIDER=none  # aws, gcp, azure, none
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# =============================================================================
# Monitoring and Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/mcp_server.log
ENABLE_DEBUG_LOGGING=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8081

# =============================================================================
# Performance and Scaling
# =============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CACHE_TTL_SECONDS=3600

# Background Tasks
ENABLE_BACKGROUND_SYNC=true
SYNC_INTERVAL_MINUTES=15
MAX_BACKGROUND_TASKS=5

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_TOOLS=true
ENABLE_SOCIAL_MEDIA_TOOLS=true
ENABLE_PROJECT_MANAGEMENT=true
ENABLE_PERSONAL_METRICS=true
ENABLE_INSIGHTS_REPORTS=true
ENABLE_BATCH_OPERATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=false

# =============================================================================
# Development and Testing (handled by test-docs-specialist)
# =============================================================================
DEVELOPMENT_MODE=false
ENABLE_MOCK_APIS=false
TEST_DATA_ENABLED=false
PYTEST_WORKERS=auto